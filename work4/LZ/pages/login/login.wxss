/**pages/login/login.wxss**/
.container{
  display: flex;
  width: 100%;
  padding: 20rpx 0;
  align-items: flex-start;
}
#loginTitle{
  align-self: center;
}
form{
  width: 100%;
  margin-top: 100rpx;
}
#radioGroupName, #inputName{
  font-size: 25rpx;
  color: grey;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  padding-left: 25rpx;
  border-bottom: 1rpx grey solid;
}
.radio-group label, .input{
  padding: 20rpx 0;
  border-bottom: 1rpx grey solid;
}
.radio-group, .input{
  width: 100%;
  display: flex;
  flex-direction: column;
  padding: 0 10px;
  font-size: 30rpx;
}
.placeholder{
  color:grey;
  font-size: 30rpx;
}
/**这个地方有问题，“请输入姓名”的padding**/
.input input{
  padding: 12rpx 0;
}
button{
  margin: 20rpx;
  background-color: #83D5D3;
  font-size: 30rpx;
  color: white;
}
icon{
  position: absolute;
  right: 30rpx;
}