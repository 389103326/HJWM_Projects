/**pages/result/result.wxss**/
.container{
  width: 100%;
  padding: 20rpx 0;
  align-items: flex-start;
}
#resultTitle{
  align-self: center;
}
.result{
  width: 100%;
  margin-top: 10rpx;
}
#date, #day{
  font-size: 25rpx;
  color: grey;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  padding-left: 25rpx;
}
#time, #department{
  font-size: 30rpx;
  padding: 20rpx 20rpx;
}
.resultDate, .resultInfo{
  width: 100%;
  display: flex;
  font-size: 30rpx;
  border-bottom: 1rpx grey solid;
}
#department{
  position: absolute;
  right:20rpx;
  color: grey;
}
#add{
  display:flex;
  justify-content: center;
  align-items:center;
  width:80rpx;
  height:80rpx;
  background-color:#83D5D3;
  border-radius: 50%;
  position: fixed;
  right: 30rpx;
  bottom: 30rpx;
}
#add text{
  margin-top:-15%;
  font-size: 80rpx;
  font-weight: bold;
  color:white;
}